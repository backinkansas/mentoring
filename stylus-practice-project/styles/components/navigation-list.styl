@import '../helpers/mixins'
@import '../helpers/variables'

.navigation__list {
    list-style: none
    padding: 0

    &__item {
        margin: 17px 0
        display: flex
        align-items: center

        &__container {
            padding: 10px
            background-color: #f7f6fb99
            border-radius: 50%
            width: 39px
            height: 39px
            position: relative
            margin-right: 10px

            &__icon {
                position: absolute
                top: 30%
                left: 30%
            }
        }

        a {
            text-decoration: none
            color: #26272c99
            font-weight: $font-weight--bold
        }
    }

    &__item:hover > .navigation__list__item__container  {
        background-color: #ffffff 
    }

    &__item:hover a {
        color: #26272c 
    }    
}