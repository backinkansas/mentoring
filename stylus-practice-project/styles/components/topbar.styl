@import '../helpers/mixins'
@import '../helpers/variables'

.topbar {
    background: linear-gradient(to right, rgba(243,97,97,1) 0%, rgba(253,132,119,0.83) 100%)
    display: flex
    justify-content: space-between
    padding: 5px 10px
    width: 400px
    border-radius: 4px
    box-shadow: $box-shadow

    &__user {
        margin-right: 21px 

        &__avatar {
            width: 50px
            border-radius: 50%
        }  
    }

    &__tittle {
        text-transform: uppercase
        color: #fbeae8
        font-size: $font-size--small
        margin: 7px 0
        display inline-block
    }

    &__icon {
        color: #fff
        margin-left: 5px  
    }

    .vertical-line {
        border-left: 1px solid rgba(243,176,172,0.6)
        height: 55px
    }
}

.dropdown-trigger__container {
    display: flex
    align-items: center
    &__tittle {
        color: #ffffff
        font-weight: $font-weight--bold
        text-decoration: none
        margin: 0
    }
}

.dropdown-trigger__container:hover{
    cursor: pointer 
}

.dropdown__content {
    opacity: 0
    position: absolute
    top: 0
    min-width: 110px
    margin: 0
    background-color: $color-gray--light
    padding: 10px
    border-radius: 4px
    box-shadow: 0 2px 4px 0 rgba(34,36,38,.12),0 2px 10px 0 rgba(34,36,38,.15)
    transition: opacity .4s ease-in-out, top .4s ease-in-out, z-index .1s ease-in-out .3s
    z-index: -1

    &__list {
        list-style: none
        text-align: left
        padding: 0
        color: $color-gray--medium

        &__item {
            padding: 5px
            border-radius: 2px
        }
    }
}

.dropdown__content__list__item:hover {
    cursor: pointer
    color: #453c40
    background-color: $color-pink--light
}

.visible {
    opacity: 1
    top: 70px
    z-index: 0
}